@model OrderReportVM
@using (Ajax.BeginForm("OrderReportPartial", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId= "report-container",
    OnBegin = "ldpLoading.Show()",
    OnComplete= "ldpLoading.Hide()"
}))
{
    <div class="row">
        <div class="col-4">
            @{
                Html.DevExpress().DateEditFor(m => m.DateFrom, settings =>
                {
                    settings.Properties.Caption = "Date From";
                }).GetHtml();
            }
        </div>
        <div class="col-4">
            @{
                Html.DevExpress().DateEditFor(m => m.DateTo, settings =>
                {
                    settings.Properties.Caption = "Date To";
                }).GetHtml();
            }
        </div>
        <div class="col-4">
            @{
                Html.DevExpress().Button(settings =>
                {
                    settings.Name = "btnSubmit";
                    settings.Text = "Preview";
                    settings.UseSubmitBehavior = true;
                }).GetHtml();
            }
        </div>
    </div>
}
<div class="row margin-top-10">
    <div class="col-12">
        <div class="card">
            <div class="card-body" id="report-container">

            </div>
        </div>
    </div>
</div>

