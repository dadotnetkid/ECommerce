                                    <input type="radio" name="option_size" disabled="" value="option1">
                                    <span>Babies</span>
                                </label>
                            </div>
                        </div>*@

                    <div class="mb-3">
                        <var class="price h4">₱ @{ViewContext.Writer.Write(Model.Price?.ToString("n2"));}</var> <br>
                        @*<span class="monthly">$32.00 / monthly <a href="#" class="btn-link">installment </a></span>*@
                    </div> <!-- price-detail-wrap .// -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="mb-4">

                            <a href="@Url.Action("AddToCart", new {productId = Model.Id})" class="btn btn-light">Add to cart</a>
                        </div>
                    }


                </article> <!-- product-info-aside .// -->
            </main> <!-- col.// -->
        </div> <!-- row.// -->
        <!--Reviews-->
        <div id="review-container">
            @Html.Action("ReviewPartial", new { productId = Model?.Id })

        </div> <!-- card-body.// -->
